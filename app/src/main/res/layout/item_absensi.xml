<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/image_left"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/pev_pearce"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/image_right"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/pev_pearce"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/text_tanggal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Senin, 10 Juni 2020"
            android:textColor="@color/colorBlack03"
            android:textSize="11sp"
            android:fontFamily="@font/robotoregular"
            android:lineSpacingExtra="2dp"
            app:layout_constraintStart_toEndOf="@id/image_left"
            app:layout_constraintEnd_toStartOf="@id/image_right"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/text_lokasi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Lokasi : Jln.Raya Wangun Desa Sindangsari Kec. Bogor Timur Kota Bogor"
            android:textColor="@color/colorBlack03"
            android:textSize="12sp"
            android:fontFamily="@font/robotoregular"
            android:lineSpacingExtra="2dp"
            app:layout_constraintStart_toEndOf="@id/image_left"
            app:layout_constraintEnd_toStartOf="@id/image_right"
            app:layout_constraintTop_toBottomOf="@id/text_tanggal"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>